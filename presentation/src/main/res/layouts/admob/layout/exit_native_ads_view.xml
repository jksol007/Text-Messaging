<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ads_exit_native_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bannerAdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ads_divider" />

    <RelativeLayout
        android:id="@+id/tapToExitLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ads_color_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="@string/exit_msg"
            android:textColor="@color/ads_color_black"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>