<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CustomTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog">

        <ImageView
            android:id="@+id/btn_later"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/iv_cancel"
            CustomTextView:tint="@color/dailog_tv_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_16sdp">

            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:src="@drawable/ic_rate_us_svg_new"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:gravity="center"
                android:text="@string/title_rate"
                android:textColor="@color/dailog_tv_black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center"
                android:singleLine="false"
                android:text="@string/rate_text"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible" />


            <com.jksol.appmodule.rate.design.RotationRatingBar
                android:id="@+id/rotationratingbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_18sdp"
                android:gravity="center"
                app:srb_starHeight="@dimen/_28sdp"
                app:srb_starPadding="@dimen/_6sdp"
                app:srb_starWidth="@dimen/_28sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/btn_rate"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner_color_primary"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/rate_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />


                <TextView
                    android:id="@+id/btn_not_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/notkown"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

